{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es5",
            "es6"
        ],
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "./dist",
        "types": [
            "foundry-pc-types"
        ]
    },
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    },
    "include": [
        "./src/**/*"
    ]
}