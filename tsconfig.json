{
	"compilerOptions": {
		"noEmit": true,
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"lib": [
			"ESNext"
		],
		"types": [
			"bun-types"
		],
		"baseUrl": "./",
		"paths": {
			"@utils/*": [
				"src/utils/*"
			]
		}
	},
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    },
    "include": [
        "./src/**/*"
    ]
}