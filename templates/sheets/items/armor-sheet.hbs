<form class="{{cssClass}} armor-sheet" autocomplete="off">
    <div class="vereteno armor sheet-header">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

        <img class="vereteno item-image" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="vereteno item-info">
            <h3 class="vereteno type-header">{{localize "vereteno.common.armor"}}</h1>
                <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}" /></h1>
        </div>
    </div>
    <div class="vereteno armor sheet-content">
        <div class="vereteno stat stat-armor-class">
            <div class="vereteno stat title">{{localize "vereteno.armor.armorClass"}}</div>
            <div class="vereteno stat value"><input name="system.armorClass" type="number" value="{{armorClass}}"
                    data-dtype="Number"></div>
        </div>
        <div class="vereteno stat stat-quality">
            <div class="vereteno stat title">{{localize "vereteno.armor.quality"}}</div>
            <div class="vereteno stat value"><input name="system.quality" type="number" value="{{quality}}"
                    data-dtype="Number"></div>
        </div>
        <div class="vereteno stat stat-durability">
            <div class="vereteno stat title">{{localize "vereteno.armor.durability"}}</div>
            <div class="vereteno stat value">
                <input name="system.durability" type="number" value="{{durability}}" min="0" max="{{maxDurability}}" data-dtype="Number">
                /
                <input name="system.maxDurability" disabled="disabled" type="number" value="{{maxDurability}}"
                    data-dtype="Number">
            </div>
        </div>
        {{> "systems/vereteno/templates/sheets/partials/item/physical-item-block.hbs"}}
    </div>
</form>