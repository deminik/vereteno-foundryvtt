<section>
    <div class="stats-container">
        <div class="vereteno character stat hit-points">
            <label class="vereteno stat title">{{system.stats.hitPoints.label}}</label>
            <div class="value-container">
                <input class="stat-value" name="system.stats.hitPoints.value" type="number"
                    value="{{system.stats.hitPoints.value}}" data-dtype="Number">
                /
                <label class="stat-max" for="system.stats.hitPoints.max" class="align-left label"
                    data-label="{{system.stats.hitPoints.max}}">{{system.stats.hitPoints.max}}</label>
            </div>
        </div>
        <div class="vereteno character stat will-points">
            <label class="vereteno stat title">{{system.stats.willPoints.label}}</label>
            <div class="value-container">
                <input class="stat-value" name="system.stats.willPoints.value" type="number"
                    value="{{system.stats.willPoints.value}}" data-dtype="Number">
                /
                <label class="stat-max" for="system.stats.willPoints.max" class="align-left label"
                    data-label="{{system.stats.willPoints.max}}">{{system.stats.willPoints.max}}</label>
            </div>
        </div>
        <div class="vereteno character stat reputation">
            <label class="vereteno stat title">{{system.stats.reputation.label}}</label>
            <div class="value-container">
                <input class="stat-value" name="system.stats.reputation.value" type="number"
                    value="{{system.stats.reputation.value}}" data-dtype="Number">
            </div>
        </div>
        <div class="vereteno character stat money">
            <label class="vereteno stat title">{{localize "vereteno.common.money"}}</label>
            <div class="value-container">
                <input class="stat-value double" name="system.stats.money" type="number" value="{{system.stats.money}}"
                    data-dtype="Number">
            </div>
        </div>
        <div class="vereteno character stat exp">
            <label class="vereteno stat title">{{localize "vereteno.common.experience"}}</label>
            <div class="value-container">
                <input class="stat-value double" name="system.stats.exp" type="number" value="{{system.stats.exp}}"
                    data-dtype="Number">
            </div>
        </div>
    </div>
</section>